[paths]
source =
  src
  */src
  *\src
  */lib/pypy*/site-packages
  */lib/python*/site-packages
  *\Lib\site-packages

[report]
skip_covered = true
skip_empty = true
show_missing = true
exclude_also =
  ^\s*@pytest\.mark\.xfail

[run]
branch = true
cover_pylib = false
parallel = true
plugins =
  covdefaults
relative_files = true
source =
  .
source_pkgs =
  sphinxcontrib.towncrier
